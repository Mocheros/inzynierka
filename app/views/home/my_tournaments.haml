.last-tournaments
  %h2 Moje turnieje
  %h4 Twórca
  .standings-table
    %table
      %thead
        %tr
          %th{style: "text-align: left;"} Nazwa
          %th Drużyny
          %th Format
      %tbody
        - @my_tournaments.each_with_index do |tournament|
          %tr
            %td{style: "text-align: left;"}
              = link_to tournament.name, tournament_path(tournament.id)
            %td
              = tournament.number_of_teams
            %td
              = tournament.format
  %h4 Edytor
  .standings-table
    %table
      %thead
        %tr
          %th{style: "text-align: left;"} Nazwa
          %th Drużyny
          %th Format
      %tbody
        - @editable_tournaments.each_with_index do |tournament|
          %tr
            %td{style: "text-align: left;"}
              = link_to tournament.name, tournament_path(tournament.id)
            %td
              = tournament.number_of_teams
            %td
              = tournament.format