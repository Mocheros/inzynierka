<div id="<%= dom_id game %>">
  <p>
    <strong>Home team:</strong>
    <%= game.home_team_id %>
  </p>

  <p>
    <strong>Away team:</strong>
    <%= game.away_team_id %>
  </p>

  <p>
    <strong>Home score:</strong>
    <%= game.home_score %>
  </p>

  <p>
    <strong>Away score:</strong>
    <%= game.away_score %>
  </p>

  <p>
    <strong>Location:</strong>
    <%= game.location %>
  </p>

  <p>
    <strong>Date:</strong>
    <%= game.date %>
  </p>

  <p>
    <strong>Status:</strong>
    <%= game.status %>
  </p>

</div>
