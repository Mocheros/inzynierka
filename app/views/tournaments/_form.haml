= form_with(model: tournament) do |form|
  - if tournament.errors.any?
    %div{style: "color: red"}
      %h2
        = pluralize(tournament.errors.count, "error")
        prohibited this tournament from being saved:
      %ul
        - tournament.errors.each do |error|
          %li= error.full_message
  = form.text_field :name, placeholder: "Nazwa", autocomplete: "off", style: "margin-top: 30px;"
  = form.select :format, options_for_select(["System ligowy", "System ligowy z rewanżami"], selected: nil), include_blank: "Rodzaj turnieju"
  = form.select :number_of_teams, options_for_select([["Ilość drużyn", nil]] + (1..64).to_a.map { |num| [num, num] }, selected: nil, disabled: nil)
  %label.toggle{for: "uniqueID"}
    = form.check_box :private, class: 'toggle__input', id: 'uniqueID'
    %span.toggle-track
      %span.toggle-indicator
        %span.checkMark
          %svg#ghq-svg-check{"aria-hidden" => "true", role: "presentation", viewbox: "0 0 24 24"}
            %path{d: "M9.86 18a1 1 0 01-.73-.32l-4.86-5.17a1.001 1.001 0 011.46-1.37l4.12 4.39 8.41-9.2a1 1 0 111.48 1.34l-9.14 10a1 1 0 01-.73.33h-.01z"}
    %h6 Turniej prywatny
  = form.hidden_field :creator_id, value: current_user.id
  %div
    = form.button "Utwórz turniej"